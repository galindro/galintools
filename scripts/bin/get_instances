#!/bin/bash

function fn_hosts() {
  unset SSH
  declare -A SSH
  IFS=$'\n'
  KEY_PREFIX="${2}"
  COUNT=0
  AWS_REGION="${1}"
  AWS_REGION_UNDERSCORE=`awk '{print $1}' <<< ${1} |tr '-' '_'`

  for i in \
  `aws ec2 describe-instances --region ${AWS_REGION} --filters 'Name=instance-state-name,Values=running' | \
  jq '.Reservations[].Instances[] |
  (
    .Tags[] |
    select(.Key == "ssh_key") |
    .Value
  ) as $identity |
  (
    .Tags[] |
    select(.Key == "Name") |
    .Value
  ) as $name |
  (
    .Tags[] |
    select(.Key == "ssh_port") |
    .Value
  ) as $port |
  (
    .Tags[] |
    select(.Key == "ssh_user") |
    .Value
  ) as $user |
  .PrivateIpAddress as $ip_address |
  "\($name) \($identity) \($port) \($user) \($ip_address)"' | sed 's,\",,g'`; do
    NAME=`awk '{print $1}' <<< $i |tr '-' '_'`
    NAME=${NAME}_${AWS_REGION_UNDERSCORE}
    IDENTITY=`awk '{print $2}' <<< $i`
    PORT=`awk '{print $3}' <<< $i`
    USER=`awk '{print $4}' <<< $i`
    ADDR=`awk '{print $5}' <<< $i`
    AS=`awk '{print $6}' <<< $i`

    for j in "${!SSH[@]}"; do
      if [ "${NAME}" == "${j}" ]; then
        COUNT=$(($COUNT+1))
        NAME=${NAME}_${COUNT}
      fi
    done  

    SSH[${NAME}]="ssh -v -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no -i ${KEY_PREFIX}/${IDENTITY} -p ${PORT} ${USER}@${ADDR}"
  done

  echo "--- REGION: ${1}"
  for i in "${!SSH[@]}"; do 
    echo "$i"
    echo "$i=\"${SSH[$i]}\"" >> /tmp/hosts_${AWS_REGION}.tmp
  done
}
